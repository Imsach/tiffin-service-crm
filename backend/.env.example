# Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tiffin_crm
# Alternative format: DATABASE_URL=postgresql://user:pass@localhost/dbname

# For development, you can use SQLite:
# DATABASE_URL=sqlite:///tiffin_crm.db

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_NAME=Tiffin Service CRM
APP_VERSION=1.0.0
ADMIN_EMAIL=admin@yourcompany.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Route Optimization Configuration
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-optional
DEFAULT_START_LATITUDE=49.1042
DEFAULT_START_LONGITUDE=-122.6604
DEFAULT_START_ADDRESS=Langley, BC, Canada

